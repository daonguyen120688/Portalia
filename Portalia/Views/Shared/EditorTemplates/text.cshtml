@using Portalia.Extentions
@model Portalia.Core.Entity.AttributeDetail

@{
    var userProfileAttribute = Model.UserProfileAttributes.FirstOrDefault();
}

<div data-is-required="@Model.IsRequired" id="@(Model.Name.RemoveSpace())" class="form-group">
    <label>@Portalia.Resources.UserProfile.ResourceManager.GetString(Model.Name.RemoveSpace()) @Html.Raw(Model.IsRequired ? "<span class=\"text-danger\">*</span>" : "") </label>
    <a href="#" class="form-control editable-click" data-type="@userProfileAttribute.AttributeDetail.Type" data-pk="@userProfileAttribute.UserProfileAttributeId" data-url="@Url.Action("UpdateUserProfile", "Manage")" data-title="Enter Value" data-value="@(string.IsNullOrEmpty(userProfileAttribute.Value)?"":userProfileAttribute.Value)" data-name="@userProfileAttribute.AttributeDetail.Name">@(string.IsNullOrEmpty(userProfileAttribute.Value) ? "" : userProfileAttribute.Value)</a>
</div>