@using Microsoft.AspNet.Identity
@using Portalia.Core.Enum
@using Portalia.ViewModels
@model Portalia.Core.Entity.Proposal
@{
    Layout = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">Send Proposal: @Model.ClientName</h4>
</div>
<div class="modal-body">
    <h4>Client: @Model.ClientName</h4>
    <h4>Project: @Model.ProjectName</h4>
    <p>@Model.Description</p>
    <p>Template <a href="http://imapsync.lamiral.info/FAQ.d/FAQ.Exchange.txt"><i class="fa fa-file"></i></a></p>
    @Html.Partial("_FileUpload", new FileUploadViewModel
{
    UrlAction = Url.Action("UploadFile", "Document", new { folderType = FolderType.MyContract, proposalId = Model.ProposalId,userId=Model.UserId })
})
    <div class="alert alert-warning" id="messageContent" style="display: none">
        <strong>Warning!</strong> Indicates a warning that might need attention.
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
    <button type="button" class="btn btn-prime btnNormal" data-url="@Url.Action("UpdateProposalStatus", "Proposal", new { proposalId = Model.ProposalId })" id="btnSendProposal">Envoyer proposition</button>
</div>